// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
//
// Settings config location: `~/.config/zed/settings.json`
//
{
  // Theming, User Interface
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Nightfox - opaque",
  },

  // Extensions
  // To find currently installed extensions: 
  // `ls ~/.local/share/zed/extensions/installed`
  "auto_install_extensions": {
    "html": true,
    "html-snippets": true,
    "toml": true,
    "dockerfile": true,
    "material-icon-theme": true,
    "nvim-nightfox": true,
  },

  // AI features
  "disable_ai": false,
  "agent": {
    "play_sound_when_agent_done": true,
  },

  // User Experience
  "vim_mode": false,
  "auto_indent": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },

  // Privacy & Security
  "telemetry": {
    // Send debug info like crash reports.
    "diagnostics": false,
    // Send anonymized usage data like what languages you're using Zed with.
    "metrics": false,
  },

  // Zen Mode | Profiles
  "profiles": {
    // Profile: Focus
    "Focus": {
      "ui_font_size": 16,
      "buffer_font_size": 18,
      "buffer_line_height": { "custom": 2.0 },
      "tab_bar": {
        "show": false,
        "show_nav_history_buttons": false,
      },
      "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false,
      },
      "gutter": {
        "line_numbers": false,
        "folds": false,
        "breakpoints": false,
        "runnables": false,
        "min_line_number_digits": 0,
      },
      "scrollbar": {
        "show": "never",
        "cursors": false,
        "git_diff": false,
        "diagnostics": "none",
        "search_results": false,
        "selected_symbol": false,
      },
    },
  },
}
